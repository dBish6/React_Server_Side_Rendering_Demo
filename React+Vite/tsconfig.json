{
  "compilerOptions": {
    "skipLibCheck": true,
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",

    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "paths": {
      "@sharedTsConfig": ["./tsconfig.json"],
      "@sharedViteConfig": ["./vite.config.ts"],
      "@front-end/*": ["./app/front-end/src/*"],
      "@back-end/*": ["./app/front-end/src/*"]
    }
  },
  "references": [
    { "path": "./app/front-end/tsconfig.json" },
    { "path": "./app/back-end/tsconfig.json" }
  ]
}
