{
  "compilerOptions": {
    "skipLibCheck": true,

    /* Bundler mode */
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "references": [
    { "path": "./front-end/tsconfig.json" },
    { "path": "./back-end/tsconfig.json" }
  ]
}
